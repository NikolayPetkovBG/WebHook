@model IEnumerable<WebHook.Frontend.WebApp.Models.WebHookViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h1>All WebHooks:</h1>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Url)</th>
    </tr>
    @foreach (WebHookViewModel item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Url</td>
        </tr>
    }
</table>

<div>
    <a asp-action="Create" asp-controller="Home" class="btn btn-info">Add WebHook</a>
    @using (Html.BeginForm("CallAll", "Home", FormMethod.Post))
    {
        <button type="submit" class="btn btn-info">Call all WebHooks</button>
    }
</div>



